<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fundo"
        android:layout_width="575dp"
        android:layout_height="792dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_fundo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="359dp"
        android:layout_height="88dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Boas vindas! Para aonde iremos explorador?" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="592dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Capitulo 1"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Capitulo 1 " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="316dp"
        android:layout_height="189dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="672dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Na explosão, a Terra e a Lua se conhecem"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="133dp"
        android:layout_height="87dp"
        android:layout_marginLeft="188dp"
        android:background="#00ACA0A0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_danger"
        tools:layout_editor_absoluteY="340dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="144dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:text="Ops!" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="369dp"
        android:layout_height="35dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="192dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:text="Estamos em manutenção!" />


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/viewPager"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>